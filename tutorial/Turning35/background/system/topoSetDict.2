FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

scale    2.7;

xminn -0.25;
yminn -0.35;
zminn -0.25;
xmaxx 1.5;
ymaxx 0.35;
zmaxx 0.25;

xmin #eval{$xminn*$scale};
ymin #eval{$yminn*$scale};
zmin #eval{$zminn*$scale};
xmax #eval{$xmaxx*$scale};
ymax #eval{$ymaxx*$scale};
zmax #eval{$zmaxx*$scale};

actions
(
    
    {
        name    refineSet;
        type    cellSet;
        action  new;
        source  boxToCell;
        min     ( $xmin $ymin $zmin );
        max     ( $xmax $ymax $zmax );
    }
   
);

